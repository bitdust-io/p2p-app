<SelectFriendItem>:
    text: root.username
    divider: None
    on_release: root.on_pressed()

    CustomIconLeftWidget:
        icon: 'account'
        padding: (0, 0, 0, 0)
        pos_hint: {'center_y': 0.5}
        md_bg_color: app.theme_cls.primary_color
        theme_text_color: "Custom"
        text_color: app.color_white
        on_release: root.on_pressed()


<SelectFriendScreen>:

    ScreenContainerLayout:

        TopEmptyScreenSpace:

        AppScreenLayout:

            AutomatShortStatusPanel:
                id: state_panel
                size_hint_x: 1
                statuses: root.get_statuses()

            HorizontalContainerLayout:

                NormalLabel:
                    size_hint: 1, None
                    height: self.texture_size[1]
                    text: root.screen_header

            VerticalScrollView:

                CustomSelectionList:
                    id: friends_list_view
                    pos_hint: {'top': 1}

        BottomEmptyScreenSpace:
