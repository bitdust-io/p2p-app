<PrivateFilesScreen>:

    ScreenContainerLayout:

        TopEmptyScreenSpace:

        AppScreenLayout:

            AutomatShortStatusPanel:
                id: state_panel
                size_hint_x: 1
                statuses: root.get_statuses()

            HorizontalContainerLayout:
                id: top_buttons_container
                spacing: "5dp"

                FillRoundFlatButton:
                    id: upload_file_button
                    text: "[size=22sp]{}[/size] [size=16sp]file[/size]".format(md_icon("content-save"))
                    md_bg_color: app.theme_cls.accent_color
                    theme_text_color: "Custom"
                    text_color: app.color_white99
                    on_release: root.on_upload_file_button_clicked()

                HEmptySpace:

            VerticalScrollView:
                id: scroll_view

                DistributedFileChooserListView:
                    id: files_list_view
                    file_system: PrivateDistributedFileSystem()

        BottomEmptyScreenSpace:
