<SettingsTreeView>:
    size_hint: 1, None
    height: self.minimum_height
    root_options: {'text': 'settings'}
    indent_start: dp(20)
    indent_level: dp(5)
    hide_root: True


<SettingsScreen>:

    ScreenContainerLayout:

        TopEmptyScreenSpace:

        AppScreenLayout:

            HorizontalContainerLayout:

                StatusLabel:
                    id: status_label
                    size_hint: 1, None
                    height: self.texture_size[1]
                    text: ''

            VerticalScrollView:
                id: scroll_view

                PageContainerWithLeftPaddingLayout:
                    size_hint: None, None
                    width: root.width - app.scroll_bar_width
                    height: self.minimum_height

                    SettingsTreeView:
                        id: settings_tree
                        pos_hint: {'top': 1}
                        size_hint: 1, None
                        height: self.minimum_height

        BottomEmptyScreenSpace:

