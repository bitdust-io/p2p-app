<SharedLocationScreen>:

    ScreenContainerLayout:

        TopEmptyScreenSpace:

        AppScreenLayout:

            AutomatShortStatusPanel:
                id: state_panel
                size_hint_x: 1
                statuses:
                    { None: 'shared files are not available at the moment',
                    'AT_STARTUP': 'shared files are not available at the moment',
                    'DHT_LOOKUP': 'connecting to the distributed hash table',
                    'SUPPLIERS?': 'connecting with remote suppliers',
                    'DISCONNECTED': 'shared location is disconnected',
                    'CONNECTED': 'shared location is connected',
                    'CLOSED': 'shared location is not active', }

            HorizontalContainerLayout:

                FillRoundFlatButton:
                    id: upload_file_button
                    text: "[size=22sp]{}[/size] [size=16sp]upload[/size]".format(md_icon("file-upload"))
                    md_bg_color: app.theme_cls.accent_color
                    theme_text_color: "Custom"
                    text_color: app.color_white99
                    on_release: root.on_upload_file_button_clicked()

                HFixedEmptySpace:

                FillRoundFlatButton:
                    id: grant_access_button
                    text: "[size=22sp]{}[/size] [size=16sp]grant access[/size]".format(md_icon("account-key"))
                    md_bg_color: app.theme_cls.primary_color
                    theme_text_color: "Custom"
                    text_color: app.color_white99
                    on_release: root.on_grant_access_button_clicked()

                HEmptySpace:

            VerticalScrollView:
                id: scroll_view

                DistributedFileChooserListView:
                    id: files_list_view
                    file_system: SharedDistributedFileSystem()

        BottomEmptyScreenSpace:


    DropDownMenu:
        id: drop_down_menu
        data:
            {'information': 'Info',
            'lan-check': 'Refresh',
            'trash-can-outline': 'Delete', }
        callback: root.on_drop_down_menu_item_clicked
