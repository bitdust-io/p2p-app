<EngineStatusScreen>:

    ScreenContainerLayout:

        TopEmptyScreenSpace:

        AppScreenLayout:

            AutomatShortStatusPanel:
                id: state_panel
                size_hint_x: 1
                statuses: root.get_statuses()

            PageContainerWithPaddingLayout:

                HorizontalMinimumHeightLayout:
                    pos_hint: {'top': 1, 'left': 0}

                    MarkupLabel:
                        size_hint: 1, None
                        height: self.texture_size[1]
                        text:
                        	"""BitDust node is a peer-to-peer application that powers independent online storage, secure private messaging and other p2p services available to everyone.
                        	The process will run in the background and maintain peer-to-peer connections to other devices on the network."""

                HorizontalMinimumHeightLayout:

                    MarkupLabel:
                        id: device_configurations_content_label
                        size_hint: 1, None
                        height: self.texture_size[1]
                        halign: 'left'
                        on_ref_press: root.on_device_configurations_content_label_pressed(*args)
                        text: ''

                HorizontalLayout:
                    size_hint: 1, None
                    height: dp(48)

                    HFlexMarkupLabel:
                        label_height: dp(48)
                        text: 'BitDust node is ON:  '

                    MDSwitch:
                        id: button_engine_on
                        active: root.main_win().engine_is_on
                        on_active: root.on_engine_on_off(self.active)

                HorizontalMinimumHeightLayout:

                    HFlexMarkupLabel:
                        halign: 'left'
                        text: 'Network connection [u][color=#0000ff][ref=link]status[/ref][/color][/u]:'
                        on_ref_press: root.on_network_connection_status_pressed(*args)

                HorizontalMinimumHeightLayout:

                    MDProgressBar:
                        id: connection_progress
                        halign: 'left'

                HorizontalMinimumHeightLayout:

                    MarkupLabel:
                        id: deploy_output_label
                        size_hint: 1, None
                        height: self.texture_size[1]
                        halign: 'left'
                        color: app.color_gray
                        text: root.main_win().engine_log

                VEmptySpace:

        BottomEmptyScreenSpace:
