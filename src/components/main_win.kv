<MainWin>:
    id: main_win
    pos_hint: {"bottom": 1}

    canvas.before:
        Color:
            rgba: app.color_white
        Rectangle:
            pos: self.pos
            size: self.size

    Widget:
        id: dropdown_menu_placeholder
        size_hint: None, None
        size: 1, 1
        pos_hint: {"center_x": .99, "center_y": .98}

    CustomTopToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 0
        icon: "search-web"
        title: "BitDust"
        anchor_title: 'center'
        specific_text_color: app.color_white
        left_action_items: [["menu", root.on_left_menu_button_clicked, ], ]
        right_action_items: []

    MDNavigationLayout:
        id: nav_wrapper
        pos_hint: {"top": 1}

        ScreenManager:
            id: screen_manager
            transition: NoTransition()

        MDNavigationDrawer:
            id: nav_drawer
            type: "modal"
            width: dp(220)
            opening_time: 0
            closing_time: 0
            elevation: 0
            radius: 0

            CustomContentNavigationDrawer:
                id: nav_drawer_content

    CustomBottomAppBar:
        id: footer
        size_hint_y: None
        height: dp(28)

        CustomBottomToolbar:
            id: footer_bar
            size_hint_y: None
            height: dp(28)
            title: ""
            icon: "plus"
            type: "bottom"
            mode: "end"
            left_action_items:
                [{"icon": "micro-chip", "icon_pack": "IconICO", "tooltip": "engine status",
                "cb": lambda x: [app.main_window.nav().set_state("close"), app.main_window.select_screen('engine_status_screen', clear_screens_stack=False, verify_state=True)]},
                {"icon": "id-card", "icon_pack": "IconICO", "tooltip": "my identity",
                "cb": lambda x: [app.main_window.nav().set_state("close"), app.main_window.select_screen('my_id_screen', clear_screens_stack=False, verify_state=True)]},
                {"icon": "lan-connect", "icon_pack": "IconMD", "tooltip": "peer-to-peer connections",
                "cb": lambda x: [app.main_window.nav().set_state("close"), app.main_window.select_screen('connecting_screen', clear_screens_stack=False, verify_state=True)]},
                {"icon": "family-tree", "icon_pack": "Icon", "tooltip": "distributed hash table",
                "cb": lambda x: None},
                {"icon": "transit-connection-variant", "icon_pack": "Icon", "tooltip": "safe packets re-routing",
                "cb": lambda x: None},
                {"icon": "database", "icon_pack": "IconFA", "tooltip": "distributed storage", "size": "18sp",
                "cb": lambda x: [app.main_window.nav().set_state("close"), app.main_window.select_screen('shares_screen', clear_screens_stack=False, verify_state=True)]},
                {"icon": "comments", "icon_pack": "IconFA", "tooltip": "chat messages",
                "cb": lambda x: [app.main_window.nav().set_state("close"), app.main_window.select_screen('conversations_screen', clear_screens_stack=False, verify_state=True)]},]
            on_action_button: root.on_hot_button_clicked()
