<YesNoPopup>:
    cols: 1

    Label:
        pos_hint: {'center_x': .5}
        valign: 'middle'
        halign: 'center'
        text: root.label

    GridLayout:
        cols: 2
        size_hint_y: None
        height: '44sp'

        Button:
            text: 'Yes'
            on_release: root.dispatch('on_answer','yes')

        Button:
            text: 'No'
            on_release: root.dispatch('on_answer', 'no')


<InputTextContent>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDLabel:
        text: root.text_content

    MDTextField:
    	id: text_input
        size_hint_x: None
        width: "280dp"
        required: True
        mode: "rectangle"


<InputTextMultilineContent>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "240dp"

    MDLabel:
        text: root.text_content

    TextInput:
        id: text_input
        multiline: True
        text: ''
        halign: 'left'
        text_size: self.size
        width: dp(310)
        height: dp(200)
        size_hint: None, None
	    font_name: 'RobotoMono-Regular'
	    font_size: '8sp'


<InputNumberContent>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDLabel:
        text: root.text_content

    MDTextField:
    	id: number_input
        size_hint_x: None
        width: "100dp"
        max_text_length: root.max_text_length
        input_filter: 'int'
        required: True
        mode: "rectangle"


<LogProgressContainerContent>:
    orientation: "vertical"
    spacing: "0dp"
    size_hint_y: None
    height: "180dp"
    pos_hint: {"top": 1}

    VerticalScrollView:

        VerticalWithPaddingLayout:
            size_hint: None, None
            pos_hint: {"top": 1}
            height: self.minimum_height
            width: root.width

		    MDLabel:
		        id: log_content
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]
		        valign: 'top'
		        text: ''
